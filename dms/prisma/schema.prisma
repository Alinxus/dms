generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  name     String?
  accounts Account[]
  sessions Session[]
}

model Account {
  id       String    @id @default(uuid())
  userId   String
  platform String
  username String
  password String
  user     User      @relation(fields: [userId], references: [id])
  sessions Session[]
}

model Session {
  id        String     @id @default(uuid())
  accountId String
  proxyId   String
  userAgent String
  cookies   String?
  account   Account    @relation(fields: [accountId], references: [id])
  proxy     Proxy      @relation(fields: [proxyId], references: [id])
  campaigns Campaign[]
  User      User?      @relation(fields: [userId], references: [id])
  userId    String?
}

model Proxy {
  id       String    @id @default(uuid())
  ip       String
  port     Int
  username String?
  password String?
  sessions Session[]
}

model Campaign {
  id        String    @id @default(uuid())
  name      String
  sessionId String
  status    String
  session   Session   @relation(fields: [sessionId], references: [id])
  messages  Message[]
}

model Message {
  id         String   @id @default(uuid())
  campaignId String
  recipient  String
  content    String
  status     String
  campaign   Campaign @relation(fields: [campaignId], references: [id])
}
